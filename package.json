{
  "name": "copyforai",
  "displayName": "Copy for AI by SidaLiu",
  "publisher": "SidaLiu",
  "description": "Copy code snippets with context for ChatGPT or other AI tools.",
  "version": "0.0.8",
  "icon": "images/copyforai.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyForAI",
        "title": "ðŸ“‹ Copy Code For AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.copyForAI",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.copyForAI",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Copy for AI",
      "properties": {
        "copyforai.includeContext": {
          "type": "boolean",
          "default": false,
          "description": "Include surrounding context lines when copying code for AI."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liusida/copyforai.git"
  }
}
